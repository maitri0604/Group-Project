<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Spinner
        android:id="@+id/spinnerSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quiz Title"
        android:layout_below="@id/spinnerSubject"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quiz Date (YYYY-MM-DD)"
        android:layout_below="@id/editTextTitle"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editTextPdfUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PDF URL"
        android:layout_below="@id/editTextDate"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonSaveQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Quiz"
        android:layout_below="@id/editTextPdfUrl" />

    <TableLayout
        android:id="@+id/tableLayoutQuizzes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSaveQuiz"
        android:layout_marginTop="16dp"
        android:stretchColumns="1"
        android:padding="8dp"
        android:background="@drawable/table_border"> <!-- Background drawable for border -->

        <!-- Table header row -->
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quiz ID"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="8dp"
                android:background="@drawable/table_header_border" /> <!-- Header cell border -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Subject"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="8dp"
                android:background="@drawable/table_header_border" /> <!-- Header cell border -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Title"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="8dp"
                android:background="@drawable/table_header_border" /> <!-- Header cell border -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Date"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="8dp"
                android:background="@drawable/table_header_border" /> <!-- Header cell border -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="PDF URL"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="8dp"
                android:background="@drawable/table_header_border" /> <!-- Header cell border -->
        </TableRow>
    </TableLayout>

</RelativeLayout>
