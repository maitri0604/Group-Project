<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:background="?android:attr/windowBackground">

    <TextView
        android:id="@+id/roleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="@string/teacher"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:rowCount="4">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <Button
                    android:id="@+id/btnTestSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/images"
                    android:padding="16dp"
                    android:text="@string/test_schedule"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="?attr/colorPrimary" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <Button
                    android:id="@+id/btnClassSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="16dp"
                    android:text="@string/class_schedule"
                    android:drawableTop="@drawable/classtime_foreground"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="?attr/colorPrimary" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <Button
                    android:id="@+id/btnCourseMaterial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="16dp"
                    android:text="@string/course_material"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="?attr/colorPrimary" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <Button
                    android:id="@+id/btnTestsQuizzes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="16dp"
                    android:text="@string/tests_quizzes_grades"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="?attr/colorPrimary" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <Button
                    android:id="@+id/btnAssignments"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="16dp"
                    android:text="@string/add_assignments"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="?attr/colorPrimary" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <Button
                    android:id="@+id/btnGrades"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="16dp"
                    android:text="@string/assignments_grades"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="?attr/colorPrimary" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <Button
                    android:id="@+id/btnAtRiskStudents"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="16dp"
                    android:text="@string/at_risk_students"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="?attr/colorPrimary" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <Button
                    android:id="@+id/btnPTMSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="16dp"
                    android:text="@string/ptm_schedule"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="?attr/colorPrimary" />

            </FrameLayout>

        </GridLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
